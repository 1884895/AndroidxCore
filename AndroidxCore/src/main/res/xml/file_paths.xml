<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 配置应用私有Pictures目录 -->
    <external-files-path
        name="pictures"
        path="Pictures" />
    <!-- 应用内部存储目录 -->
    <files-path
        name="files"
        path="." />
    
    <!-- 应用内部缓存目录 -->
    <cache-path
        name="cache"
        path="." />
    
    <!-- 外部存储目录 -->
    <external-path
        name="external"
        path="." />
    
    <!-- 外部文件目录 -->
    <external-files-path
        name="external_files"
        path="." />
    
    <!-- 外部缓存目录 -->
    <external-cache-path
        name="external_cache"
        path="." />
    
    <!-- 外部媒体目录 (API 29+) -->
    <external-media-path
        name="external_media"
        path="." />
</paths>