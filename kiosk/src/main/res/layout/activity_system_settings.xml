<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEAC5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 系统设置管理"
            android:textSize="28sp"
            android:textColor="#8B4513"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- 网络设置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌐 网络设置"
                android:textSize="20sp"
                android:textColor="#8B4513"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/wifiStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="检查网络状态中..."
                android:textSize="15sp"
                android:textColor="#A0522D"
                android:padding="12dp" />

            <Button
                android:id="@+id/networkSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 网络设置页面(Debug)"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_style_blue"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#D2B48C"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- 显示设置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🖥️ 显示设置"
                android:textSize="20sp"
                android:textColor="#8B4513"
                android:textStyle="bold"
                android:padding="8dp" />

            <Button
                android:id="@+id/brightnessButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 屏幕亮度调节"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_style_orange"
                android:layout_margin="8dp"
                android:padding="16dp" />

        </LinearLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#D2B48C"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- 音频和时间设置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔊 音频和时间"
                android:textSize="20sp"
                android:textColor="#8B4513"
                android:textStyle="bold"
                android:padding="8dp" />

            <Button
                android:id="@+id/soundSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎵 声音设置"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_style_green"
                android:layout_margin="8dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/dateTimeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🕒 日期和时间设置"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_style_purple"
                android:layout_margin="8dp"
                android:padding="16dp" />

        </LinearLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#D2B48C"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- 系统设置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ 系统设置"
                android:textSize="20sp"
                android:textColor="#8B4513"
                android:textStyle="bold"
                android:padding="8dp" />

            <!-- Debug模式按钮组 -->
            <LinearLayout
                android:id="@+id/debugButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/systemSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ 系统设置页面(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_red"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/developerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛠️ 开发者选项(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_purple_dark"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/applicationButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📱 应用管理(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_teal"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/networkCheckButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌐 网络检测"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_style_green_dark"
                android:layout_margin="8dp"
                android:padding="16dp" />

            <!-- 电源管理按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/shutdownButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔴 关机"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_red_dark"
                    android:layout_marginEnd="4dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/rebootButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔄 重启"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_orange_dark"
                    android:layout_marginStart="4dp"
                    android:padding="16dp" />

            </LinearLayout>

            <!-- Honor应用按钮组 -->
            <LinearLayout
                android:id="@+id/honorAppsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/floatingWindowDebugButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗨️ 悬浮窗调试(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_pink"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/cameraButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📷 打开Honor相机(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_cyan"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/galleryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🖼️ 打开Honor相册(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_pink_dark"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/fileManagerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📁 打开Honor文件管理(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_green"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/dockBarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚫 Honor侧滑悬浮入口屏蔽(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_purple"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/resetSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔒 Honor重置菜单项屏蔽(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_purple_dark"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

                <Button
                    android:id="@+id/exitKioskButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚪 退出单应用模式(Debug)"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_red"
                    android:layout_margin="8dp"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#8B4513"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="20dp" />

        <!-- 网络状态详情 -->
        <TextView
            android:id="@+id/networkInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#A0522D"
            android:gravity="center"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>